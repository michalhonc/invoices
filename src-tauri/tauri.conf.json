{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Invoices",
  "version": "0.1.0",
  "identifier": "com.michalhonc.invoices",
  "build": {
    "beforeDevCommand": "npm run dev:vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Invoices – Kontrolní hlášení DPH",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": true,
        "visible": true
      }
    ],
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "tooltip": "Invoices"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["sidecar/invoices-sidecar"],
    "macOS": {
      "signingIdentity": "-"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
